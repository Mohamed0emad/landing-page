pipeline {
    agent any

    tools {
        jdk 'java17'
        maven 'Maven3'
    }

    stages {

        stage("Cleanup Workspace") {
            steps {
                cleanWs()
            }
        }

        stage("Checkout from SCM") {
            steps {
                // shallow clone: commit واحد فقط
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/Mohamed0emad/landing-page.git',
                        credentialsId: 'github'
                    ]],
                    extensions: [[
                        $class: 'CloneOption', shallow: true, depth: 1, noTags: true, timeout: 10
                    ]]
                ])
                sh "ls -al"
            }
        }

        stage("Build Application") {
            steps {
                // Use persistent Maven local repo for caching
                sh 'mvn -Dmaven.repo.local=$HOME/.m2/repository clean package'
            }
        }

        stage("Test Application") {
            steps {
                sh 'mvn -Dmaven.repo.local=$HOME/.m2/repository test'
            }
        }

    }
}